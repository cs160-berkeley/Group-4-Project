<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ea.scratchthathabit">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RemindersActivity" />
        <activity
            android:name=".RemindersCreateActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".RemindersContextActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".RemindersTimeActivity" />
        <activity
            android:name=".ListsActivity"
            />
        <activity
            android:name=".EditListsActivity">

        </activity>
        <activity android:name=".GraphActivity" />
        <activity android:name=".WeatherActivity" />
        <service android:name=".PhoneToWatchService" />
        <!-- Listeners are special services that need to be declared like below, as BIND_LISTENER -->
        <service android:name=".PhoneListenerService"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAH2X1C7-5T-EP66xR03k4rT7CpUgnVcNE"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>