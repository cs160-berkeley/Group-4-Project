<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/close_button"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:text="@string/title_activity_reminder_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btn_save"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/save_button"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <View
                android:background="@color/colorPrimaryDark"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:textColor="@color/text"
            android:layout_centerHorizontal="true"
            android:inputType="textFilter"
            android:id="@+id/RNameInput"
            android:textAlignment="center"
            android:hint="Reminder Name"
            android:layout_marginTop="30dp"
            android:background="@drawable/edittextstyle"
            android:layout_width="200dp"
            android:layout_height="40dp" />


        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/RNameInput"
            android:id="@+id/toggle_reminder_panel"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@color/text"
                android:backgroundTint="@color/white"
                android:text="@string/time"
                android:layout_marginRight="-8dp"
                android:id="@+id/time_toggle"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

            <Button
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="@string/context"
                android:textColor="@color/white"
                android:layout_toEndOf="@id/time_toggle"
                android:layout_gravity="center_horizontal"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <EditText
            android:textColor="@color/text"
            android:layout_centerHorizontal="true"
            android:id="@+id/address_input"
            android:hint="Address"
            android:layout_marginTop="10dp"
            android:layout_below="@id/toggle_reminder_panel"
            android:background="@drawable/edittextstyle"
            android:inputType="textFilter"
            android:layout_width="200dp"
            android:layout_height="40dp" />

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/address_input"
            android:id="@+id/arriving_panel"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text"
                android:layout_centerVertical="true"
                android:text="@string/arriving"
                android:textSize="16dp"
                android:layout_toLeftOf="@+id/arriving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:buttonTint="@color/checkedTint"
                android:id="@+id/arriving"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:id="@+id/leaving_panel"
            android:layout_marginTop="-5dp"
            android:layout_below="@+id/arriving_panel"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text"
                android:layout_centerVertical="true"
                android:text="@string/leaving"
                android:textSize="16dp"
                android:layout_toStartOf="@+id/leaving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:buttonTint="@color/checkedTint"
                android:id="@+id/leaving"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/days_panel"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/leaving_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_marginRight="-4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Monday"
                android:background="@drawable/mwhite" />

            <ImageButton
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Tuesday"
                android:background="@drawable/twhite" />

            <ImageButton
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Wednesday"
                android:background="@drawable/wwhite" />

            <ImageButton
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Thursday"
                android:background="@drawable/twhite" />

            <ImageButton
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Friday"
                android:background="@drawable/fwhite" />

            <ImageButton
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="-4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Saturday"
                android:background="@drawable/swhite" />

            <ImageButton
                android:layout_marginLeft="-4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Sunday"
                android:background="@drawable/swhite"/>

z
        </LinearLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@id/days_panel"
            android:id="@+id/sound_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text"
                android:layout_centerVertical="true"
                android:text="@string/sound"
                android:layout_toLeftOf="@+id/sound"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:buttonTint="@color/checkedTint"
                android:id="@+id/sound"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sound_layout"
            android:id="@+id/vibration_layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/vibration"
                android:text="@string/vibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <CheckBox
                android:buttonTint="@color/checkedTint"
                android:layout_alignParentRight="true"
                android:id="@+id/vibration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <RelativeLayout

            android:id="@+id/attach_layout"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20dp"
                android:textColor="@color/text"
                android:text="@string/attach_list_text"
                android:id="@+id/attach_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/attach_text"
                android:background="@drawable/add_button"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>



    </RelativeLayout>



</LinearLayout>