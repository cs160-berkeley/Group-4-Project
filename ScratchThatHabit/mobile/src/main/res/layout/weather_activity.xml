<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/backgroundGrey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:text="@string/title_activity_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:background="@color/colorPrimaryDark"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/today_display"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:padding="10dp"
                android:id="@+id/weather_and_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/text"
                    android:layout_centerHorizontal="true"
                    android:textSize="24sp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/today"
                    android:id="@+id/today_weather"
                    android:layout_width="125dp"
                    android:layout_height="125dp" />

                <RelativeLayout
                    android:id="@+id/temperature_layout"
                    android:layout_below="@id/today"
                    android:layout_toRightOf="@id/today_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="30dp"
                        android:layout_centerVertical="true"
                        android:textSize="48dp"
                        android:id="@+id/today_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@drawable/temperature_cut"
                        android:layout_toRightOf="@id/today_temp"
                        android:layout_centerVertical="true"
                        android:id="@+id/today_temp_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/today_temp"
                        android:layout_marginTop="50dp"
                        android:textSize="20dp"
                        android:id="@+id/weather_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/humidity_and_pollen"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_margin="35dp"
                    android:id="@+id/humidity_layout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/text"
                        android:id="@+id/humidity_label"
                        android:text="@string/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/humidity_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerVertical="true"
                            android:id="@+id/humidity_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />

                        <TextView
                            android:textColor="@color/text"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/humidity_img"
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_margin="35dp"
                    android:id="@+id/pollen_layout"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/text"
                        android:id="@+id/pollen_label"
                        android:text="Pollen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/pollen_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_centerVertical="true"
                            android:src="@drawable/pollen"
                            android:id="@+id/pollen_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />

                        <TextView
                            android:textColor="@color/text"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/pollen_img"
                            android:id="@+id/pollen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/border"
            android:layout_below="@+id/today_display"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:layout_width="300dp"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/border"
            android:id="@+id/future"
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content">


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:id="@+id/nag_notifcations"
                android:background="@color/backgroundGrey"
                android:layout_width="100dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/alarm_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nag_weather"
                android:background="#1FDCE5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nag_notifcations">

                <ImageView
                    android:src="@drawable/weather_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nag_lists"
                android:background="@color/backgroundGrey"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nag_weather">
                <ImageView
                    android:src="@drawable/list_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nag_graphs"
                android:background="@color/backgroundGrey"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nag_lists">

                <ImageView
                    android:src="@drawable/graph_white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
