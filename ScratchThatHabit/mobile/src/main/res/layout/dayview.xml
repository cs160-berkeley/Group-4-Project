<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="wrap_content"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/text"
        android:layout_centerHorizontal="true"
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/day"
        android:layout_marginTop="5dp"
        android:id="@+id/weather"
        android:layout_width="30dp"
        android:layout_height="30dp" />


    <TextView
        android:textColor="@color/text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/weather"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:id="@+id/day_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/day_temperature"
        android:layout_marginTop="5dp"
        android:id="@+id/day_humidity"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/humidity_img"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:textColor="@color/text"
            android:layout_marginLeft="5dp"
            android:id="@+id/humidity_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/day_humidity"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pollen_img"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:textColor="@color/text"
            android:layout_marginLeft="5dp"
            android:id="@+id/pollen_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>